<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>
    <client>
      <endpoint address="net.pipe://localhost/elysium/notifications" binding="netNamedPipeBinding" contract="Elysium.Notifications.NotificationManager"/>
    </client>
    <bindings>
      <netNamedPipeBinding>
        <binding closeTimeout="00:00:02"
                 openTimeout="00:00:02"
                 receiveTimeout="00:00:02"
                 sendTimeout="00:00:02"
                 transactionFlow="false"
                 transferMode="Buffered"
                 transactionProtocol="OleTransactions"
                 hostNameComparisonMode="Exact"
                 maxBufferPoolSize="524288"
                 maxBufferSize="65536"
                 maxConnections="100"
                 maxReceivedMessageSize="65536">
          <security mode="Transport">
            <transport protectionLevel="None"/>
          </security>
        </binding>
      </netNamedPipeBinding>
    </bindings>
  </system.serviceModel>
</configuration>