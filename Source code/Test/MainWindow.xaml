                    <ComboBoxItem Content="4th ComboBoxItem"/>
                    <ComboBoxItem Content="5th ComboBoxItem"/>
                    <ComboBoxItem Content="6th ComboBoxItem"/>
                    <ComboBoxItem Content="7th ComboBoxItem"/>
                </ComboBox>
                <ComboBox Grid.Column="1"
                          Grid.Row="0"
                          IsEnabled="False"
                          IsEditable="True"
                          SelectedIndex="4"
                          Margin="{Binding RelativeSource={RelativeSource Self}, Path=(metro:Parameters.BoldPadding), Mode=OneWay}">
                    <ComboBoxItem Content="First ComboBoxItem"/>
                    <ComboBoxItem Content="Second ComboBoxItem"/>
                    <ComboBoxItem Content="Third ComboBoxItem"/>
                    <ComboBoxItem Content="4th ComboBoxItem"/>
                    <ComboBoxItem Content="5th ComboBoxItem"/>
                    <ComboBoxItem Content="6th ComboBoxItem"/>
                    <ComboBoxItem Content="7th ComboBoxItem"/>
                </ComboBox>
                <ComboBox Grid.Column="0"
                          Grid.Row="1"
                          IsEditable="False"
                          SelectedIndex="2"
                          Margin="{Binding RelativeSource={RelativeSource Self}, Path=(metro:Parameters.BoldPadding), Mode=OneWay}">
                    <ComboBoxItem Content="First ComboBoxItem"/>
                    <ComboBoxItem Content="Second ComboBoxItem"/>
                    <ComboBoxItem Content="Third ComboBoxItem"/>
                    <ComboBoxItem Content="4th ComboBoxItem"/>
                    <ComboBoxItem Content="5th ComboBoxItem"/>
                    <ComboBoxItem Content="6th ComboBoxItem"/>
                    <ComboBoxItem Content="7th ComboBoxItem"/>
                </ComboBox>
                <ComboBox Grid.Column="1"
                          Grid.Row="1"
                          IsEditable="True"
                          SelectedIndex="4"
                          Margin="{Binding RelativeSource={RelativeSource Self}, Path=(metro:Parameters.BoldPadding), Mode=OneWay}">
                    <ComboBoxItem Content="First ComboBoxItem"/>
                    <ComboBoxItem Content="Second ComboBoxItem"/>
                    <ComboBoxItem Content="Third ComboBoxItem"/>
                    <ComboBoxItem Content="4th ComboBoxItem"/>
                    <ComboBoxItem Content="5th ComboBoxItem"/>
                    <ComboBoxItem Content="6th ComboBoxItem"/>
                    <ComboBoxItem Content="7th ComboBoxItem"/>
                </ComboBox>
                <ListBox Grid.Column="0"
