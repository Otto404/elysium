                    <ListBoxItem Content="7th ListBoxItem"/>
                </ListBox>
                <metro:ToggleSwitch Grid.Column="2"
                                    Grid.Row="0"
                                    IsEnabled="False"
                                    IsChecked="False"
                                    Margin="{Binding RelativeSource={RelativeSource Self}, Path=(metro:Parameters.BoldPadding), Mode=OneWay}"/>
                <metro:ToggleSwitch Grid.Column="2"
                                    Grid.Row="1"
                                    IsEnabled="False"
                                    IsChecked="True"
                                    Margin="{Binding RelativeSource={RelativeSource Self}, Path=(metro:Parameters.BoldPadding), Mode=OneWay}"/>
                <metro:ToggleSwitch Grid.Column="2"
                                    Grid.Row="2"
                                    IsEnabled="True"
                                    IsChecked="False"
                                    Margin="{Binding RelativeSource={RelativeSource Self}, Path=(metro:Parameters.BoldPadding), Mode=OneWay}"/>
                <metro:ToggleSwitch Grid.Column="2"
                                    Grid.Row="3"
                                    IsEnabled="True"
                                    IsChecked="True"
                                    Margin="{Binding RelativeSource={RelativeSource Self}, Path=(metro:Parameters.BoldPadding), Mode=OneWay}"/>
                <Slider Grid.Column="3"
                        Grid.Row="0"
                        IsEnabled="False"
                        Orientation="Horizontal"
