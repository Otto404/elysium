                          IsEditable="False"
                          SelectedIndex="2"
                          Margin="{Binding RelativeSource={RelativeSource Self}, Path=(metro:Parameters.BoldPadding), Mode=OneWay}">
                    <ComboBoxItem Content="First ComboBoxItem"/>
                    <ComboBoxItem Content="Second ComboBoxItem"/>
