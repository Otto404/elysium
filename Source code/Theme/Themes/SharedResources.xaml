<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:root="clr-namespace:Elysium"
                    xmlns:converters="clr-namespace:Elysium.Converters">

    <converters:DoubleToGridLengthConverter x:Key="DoubleToGridLengthConverter"/>
    <converters:DoubleToThicknessConverter x:Key="DoubleToThicknessConverter"/>
    <converters:GridLengthToDoubleConverter x:Key="GridLengthToDoubleConverter"/>
    <converters:ThicknessToDoubleConverter x:Key="ThicknessToDoubleConverter"/>
    
    <Style x:Key="FocusVisualStyle">
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Rectangle Margin="{Binding Source={x:Static root:Parameters.Instance}, Path=DefaultPadding, Mode=OneWay}" 
                               Fill="{DynamicResource TransparentBrush}"
                               Stroke="{DynamicResource ForegroundBrush}"
                               StrokeThickness="{Binding Source={x:Static root:Parameters.Instance}, Path=DefaultThicknessValue, Mode=OneWay}"
                               StrokeDashArray="2 1"
                               RenderOptions.EdgeMode="Aliased"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>