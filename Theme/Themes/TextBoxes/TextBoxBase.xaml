<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Theme;component/Themes/SharedResources.xaml"/>
        <ResourceDictionary Source="/Theme;component/Themes/TextBoxes/Control.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="TextBoxesBaseStyle" TargetType="{x:Type TextBoxBase}" BasedOn="{StaticResource BoxesBaseStyle}">
        
        <Setter Property="CaretBrush" Value="{StaticResource Foreground}"/>
        <Setter Property="SelectionBrush" Value="{StaticResource ForegroundMiddlelight}"/>
        
        <Style.Triggers>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="IsKeyboardFocusWithin" Value="True"/>
                    <Condition Property="IsReadOnly" Value="False"/>
                </MultiTrigger.Conditions>
                <MultiTrigger.Setters>
                    <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                    <Setter Property="BorderThickness" Value="{StaticResource BoldThickness}"/>
                    <Setter Property="Foreground" Value="{StaticResource Foreground}"/>
                </MultiTrigger.Setters>
            </MultiTrigger>
        </Style.Triggers>
        
    </Style>
    
</ResourceDictionary>