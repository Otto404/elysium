<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Theme;component/Themes/SharedResources.xaml"/>
        <ResourceDictionary Source="/Theme;component/Themes/Buttons/ButtonBase.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonsBase}">        
        <Style.Triggers>
            <Trigger Property="IsDefault" Value="True">
                <Setter Property="Background" Value="{StaticResource ForegroundHighlight}"/>
                <Setter Property="BorderBrush" Value="{StaticResource Accent}"/>
                <Setter Property="BorderThickness" Value="{StaticResource DefaultThickness}"/>
                <Setter Property="Foreground" Value="{StaticResource Foreground}"/>
            </Trigger>
        </Style.Triggers>        
    </Style>
    
</ResourceDictionary>